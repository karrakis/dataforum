

<p id="notice"><%= notice %></p>

<h2><%= @graph.graph_label %></h2>
  <canvas id="theChart" data-graph_data="<%= @graph.make_data %>" height=550, width=550 ></canvas>
  <script> 
  	var chart = $('#theChart')
  	charter("theChart", chart) 
  </script>

<div class="show actions">
  <%= link_to 'Edit', edit_graph_path(@graph) %>
  <%= link_to 'Remove', @graph, data: { confirm: 'Are you sure you want to lose a graph?' }, method: :delete, class: 'destroy' %>
  <%= link_to 'Back to all my graphs', graphs_path %>
</div>