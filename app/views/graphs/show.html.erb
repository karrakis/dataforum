

<p id="notice"><%= notice %></p>

<div class="row column">
	<h2><%= @graph.graph_label %></h2>
	<canvas id="theChart" data-graph_data="<%= @graph.make_data %>" class='large-12'></canvas>
	<script> 
 		var chart = $('#theChart')
 		charter("theChart", chart.data('graph_data')) 
	</script>
	<hr>
	<div class="show actions">
	  <%= link_to 'Edit Graph', edit_graph_path(@graph), class: 'button' %>
	  <%= link_to 'Remove Graph', @graph, data: { confirm: 'Are you sure you want to lose a graph?' }, method: :delete, class: 'destroy button' %>
	  <%= link_to 'Back to all my graphs', graphs_path, class: 'button' %>
	</div>
</div>


