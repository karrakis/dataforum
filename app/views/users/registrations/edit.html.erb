<h2><%= resource_name.to_s.humanize %> Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="callout primary">
    <div class="field">
      <%= f.label :email, "User Email" %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>
  </div>

  <div class="callout primary">
    <div class="field">
      <%= f.label :auth_token, "API Key" %><br />
      <%= f.text_field :auth_token, autocomplete: "on", readonly: true %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="callout warning">
    <div class="field">
      <%= f.label :password, "New Password" %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "New Password Confirmation" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>

  <div class="callout success">
    <div class="field">
      <%= f.label :current_password, "Current Password" %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'success button' %>
  </div>
<% end %>

<div class='row align-spaced'>
  <%= link_to "Back", :back, class: 'button' %>
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'alert button' %>
</div>